    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 現在のファイル",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "${input:prompt}"
            ]
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "prompt",
            "description": "引数を入力してください",
            "default": ""
        }
    ] 
}
